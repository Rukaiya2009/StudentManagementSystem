        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinMarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxMarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
