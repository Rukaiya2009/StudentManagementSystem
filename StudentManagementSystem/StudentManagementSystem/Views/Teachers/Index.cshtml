@model IEnumerable<StudentManagementSystem.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Teachers Management</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Add New Teacher
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th class="text-white">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="text-white">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th class="text-white">
                            @Html.DisplayNameFor(model => model.DepartmentName)
                        </th>
                        <th class="text-white text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fas fa-chalkboard-teacher text-primary me-2"></i>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <i class="fas fa-envelope text-muted me-2"></i>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    @Html.DisplayFor(modelItem => item.DepartmentName)
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.TeacherId" 
                                       class="btn btn-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.TeacherId" 
                                       class="btn btn-warning btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.TeacherId" 
                                       class="btn btn-danger btn-sm" title="Delete"
                                       onclick="return confirm('Are you sure you want to delete this teacher?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No teachers found</h4>
                <p class="text-muted">Get started by adding your first teacher.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Teacher
                </a>
            </div>
        }
    </div>
</div>