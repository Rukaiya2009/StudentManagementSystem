@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Access Denied
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-4x text-danger mb-3"></i>
                        <h2>Access Denied</h2>
                        <p class="lead text-muted">
                            Sorry, you don't have permission to access this resource.
                        </p>
                    </div>

                    <div class="alert alert-info">
                        <h5>What you can do:</h5>
                        <ul class="list-unstyled">
                            @if (User.IsInRole("Student"))
                            {
                                <li><i class="fas fa-arrow-right text-primary"></i> <a asp-controller="StudentDashboard" asp-action="Index">Go to My Dashboard</a></li>
                                <li><i class="fas fa-arrow-right text-primary"></i> <a asp-controller="Courses" asp-action="Index">Browse Available Courses</a></li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                            {
                                <li><i class="fas fa-arrow-right text-primary"></i> <a asp-controller="Students" asp-action="Index">Manage Students</a></li>
                                <li><i class="fas fa-arrow-right text-primary"></i> <a asp-controller="Courses" asp-action="Index">Manage Courses</a></li>
                            }
                            <li><i class="fas fa-arrow-right text-primary"></i> <a asp-controller="Home" asp-action="Index">Return to Home</a></li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> Go to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 