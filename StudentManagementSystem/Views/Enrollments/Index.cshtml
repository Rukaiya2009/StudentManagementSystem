@model IEnumerable<StudentManagementSystem.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Enrollments Management</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Add New Enrollment
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th class="text-white">
                            <i class="fas fa-user-graduate me-2"></i>@Html.DisplayNameFor(model => model.Student)
                        </th>
                        <th class="text-white">
                            <i class="fas fa-book me-2"></i>@Html.DisplayNameFor(model => model.Course)
                        </th>
                        <th class="text-white">
                            <i class="fas fa-star me-2"></i>@Html.DisplayNameFor(model => model.Grade)
                        </th>
                        <th class="text-white text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fas fa-user text-primary me-2"></i>
                                @Html.DisplayFor(modelItem => item.Student.FullName)
                            </td>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Course.CourseName)</strong>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Grade))
                                {
                                    <span class="badge 
                                        @(item.Grade == "A" ? "bg-success" :
                                          item.Grade == "B" ? "bg-primary" :
                                          item.Grade == "C" ? "bg-warning" :
                                          item.Grade == "D" ? "bg-info" :
                                          item.Grade == "F" ? "bg-danger" : "bg-secondary")">
                                        @Html.DisplayFor(modelItem => item.Grade)
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">Not Graded</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.EnrollmentId" 
                                       class="btn btn-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.EnrollmentId" 
                                       class="btn btn-warning btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.EnrollmentId" 
                                       class="btn btn-danger btn-sm" title="Delete"
                                       onclick="return confirm('Are you sure you want to delete this enrollment?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-user-graduate fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No enrollments found</h4>
                <p class="text-muted">Get started by adding your first enrollment.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Enrollment
                </a>
            </div>
        }
    </div>
</div>
