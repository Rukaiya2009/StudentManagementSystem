@model IEnumerable<StudentManagementSystem.Models.Payment>
@{
    ViewData["Title"] = "All Payments";
}
<h2>All Payments</h2>
<form method="get" class="mb-3">
    <div class="form-row d-flex flex-wrap gap-2">
        <input name="search" value="@Request.Query["search"]" class="form-control" placeholder="Search by student name or email" />

        <select name="isConfirmed" class="form-control">
            <option value="">All Statuses</option>
            <option value="true" selected="@(Request.Query["isConfirmed"] == "true")">Confirmed</option>
            <option value="false" selected="@(Request.Query["isConfirmed"] == "false")">Pending</option>
        </select>

        <input name="fromDate" type="date" class="form-control" value="@Request.Query["fromDate"]" />
        <input name="toDate" type="date" class="form-control" value="@Request.Query["toDate"]" />

        <select name="sortBy" class="form-control">
            <option value="">Sort by Date (newest)</option>
            <option value="date_asc" selected="@(Request.Query["sortBy"] == "date_asc")">Date ↑</option>
            <option value="date_desc" selected="@(Request.Query["sortBy"] == "date_desc")">Date ↓</option>
            <option value="amount_asc" selected="@(Request.Query["sortBy"] == "amount_asc")">Amount ↑</option>
            <option value="amount_desc" selected="@(Request.Query["sortBy"] == "amount_desc")">Amount ↓</option>
        </select>

        <button class="btn btn-primary">Filter</button>
    </div>
</form>
<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Payment ID</th>
            <th>Student</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Method</th>
            <th>Reference</th>
            <th>Status</th>
            <th>Proof</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var payment in Model)
    {
        <tr>
            <td>@payment.PaymentId</td>
            <td>@payment.StudentFullName</td>
            <td>@payment.Amount.ToString("C")</td>
            <td>@payment.DatePaid.ToShortDateString()</td>
            <td>@payment.PaymentMethod</td>
            <td>@payment.ReferenceNumber</td>
            <td>
                @if (payment.IsConfirmed)
                {
                    <span class="badge bg-success">Confirmed</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(payment.PaymentProofPath))
                {
                    <a href="@payment.PaymentProofPath" target="_blank" class="btn btn-sm btn-info">View Proof</a>
                }
                else
                {
                    <span class="text-muted">No Proof</span>
                }
            </td>
            <td>
                @if (!payment.IsConfirmed)
                {
                    <form asp-action="MarkAsConfirmed" method="post" asp-route-id="@payment.PaymentId" style="display:inline;">
                        <button type="submit" class="btn btn-success btn-sm">Mark as Confirmed</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table> 