@model StudentManagementSystem.Models.Teacher

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Teacher</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">@Html.DisplayName("Department")</dt>
        <dd class = "col-sm-10">@(Model.Department != null ? Model.Department.DepartmentName : "N/A")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TeacherId" />
        <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm me-1" style="border-color: #DC3545; color: #DC3545;" />
        <a asp-action="Index" class="btn btn-outline-info btn-sm" style="border-color: #0DCAF0; color: #0DCAF0;">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
