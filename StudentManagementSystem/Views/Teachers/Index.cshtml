@model IEnumerable<StudentManagementSystem.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Teachers Management</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Add New Teacher
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Profile</th>
                        <th>Teacher</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DepartmentName)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(string.IsNullOrEmpty(item.ProfilePicture) ? Url.Content("~/images/default-avatar.png") : Url.Content("~" + item.ProfilePicture))" alt="Profile" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" />
                            </td>
                            <td>
                                <i class="fas fa-chalkboard-teacher text-primary me-2"></i>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <i class="fas fa-envelope text-muted me-2"></i>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    @Html.DisplayFor(modelItem => item.DepartmentName)
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.TeacherId" class="btn btn-outline-info btn-sm me-1" style="border-color: #0DCAF0; color: #0DCAF0;">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.TeacherId" class="btn btn-outline-warning btn-sm me-1" style="border-color: #FFC107; color: #FFC107;">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.TeacherId" class="btn btn-outline-danger btn-sm" style="border-color: #DC3545; color: #DC3545;">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No teachers found</h4>
                <p class="text-muted">Get started by adding your first teacher.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Teacher
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/4e9c2b6e8b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
